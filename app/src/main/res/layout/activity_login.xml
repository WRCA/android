<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginLeft="@dimen/margin_side"
        android:layout_marginRight="@dimen/margin_side"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginBottom="@dimen/margin_gap"
            android:src="@drawable/icon_wrca"
            android:layout_gravity="center_horizontal"/>
        <!-- Email -->
        <EditText android:id="@+id/edit_text_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_gap"
            android:inputType="textEmailAddress"
            android:hint="email"
            android:singleLine="true"/>

        <!-- Password Label -->
        <EditText android:id="@+id/edit_text_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_gap"
            android:hint="password"
            android:password="true"
            android:singleLine="true"/>


        <Button android:id="@+id/button_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/selector_button"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/margin_gap"
            android:text="New User?"
            android:onClick="signup"/>

        <Button android:id="@+id/button_submit"
            android:layout_width="match_parent"
            android:background="@color/selector_button"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:text="Submit"
            android:onClick="submit"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/selector_text_view"
            android:text="Forget Password?"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:clickable="true"
            android:onClick="forgetPassword"
            android:layout_marginTop="@dimen/margin_gap"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</ScrollView>
